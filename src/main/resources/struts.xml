<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.devMode" value="true"/>

    <package name="default" namespace="/" extends="struts-default">
        <action name="login" class="com.clinical.management.action.LoginAction">
            <result name="SUCCESS">view/welcome.jsp</result>
            <result name="ERROR">view/error.jsp</result>
        </action>
        <action name="logout" class="com.clinical.management.action.LogoutAction">
            <result name="SUCCESS">view/login.jsp</result>
        </action>
        <action name="create" class="com.clinical.management.action.CreateAction">
            <result name="SUCCESS">view/create.jsp</result>
            <result name="ERROR">view/error.jsp</result>
        </action>
        <action name="create-patient" class="com.clinical.management.action.CreatePatientAction">
            <result name="SUCCESS">view/welcome.jsp</result>
            <result name="ERROR">view/error.jsp</result>
        </action>
    </package>

</struts>